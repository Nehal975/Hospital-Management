                {{/each}}
            </div>

        </div>
        <div class="text-center">
            {{#if (urlHelper currentUrl '/')}}
            <a href="/gallery" class="btn btn-primary w-50 m-auto my-3">View All Gallery Images</a>
            {{/if}}
        </div>
    </div>
</section><!-- /Gallery Section -->