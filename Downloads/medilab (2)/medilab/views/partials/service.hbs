<!-- Services Section -->
<section id="services" class="services section">
    <div class="my-container">

        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>Services</h2>
            <p>At MediLab, we provide expert medical care across multiple specialties, including Cardiology, Neurology,
                Pediatrics, Hepatology, Physiotherapy, and Eye Care, ensuring advanced treatments, compassionate care,
                and patient-centered healthcare solutions.</p>
        </div><!-- End Section Title -->

        <div class="container">

            <div class="row gy-4">
                {{#each services}}
                <div class="col-lg-4 col-md-6 mb-5" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-item  position-relative">
                        <div class="icon">
                            {{{icon}}}
                        </div>
                        <a href="/service/{{seoUrl}}" class="stretched-link">
                            <h3 class="fs-5">{{title}}</h3>
                        </a>
                        <div class="service-short-description">{{{shortDescription}}}</div>
                    </div>
                    <a href="/service/{{seoUrl}}" class="btn btn-primary w-100">Read More...</a>
                </div><!-- End Service Item -->
                {{/each}}

                {{#if (urlHelper currentUrl '/')}}
                <a href="/service" class="btn btn-primary w-50 m-auto my-3">View All Services</a>
                {{/if}}
            </div>

        </div>

    </div>
</section><!-- /Services Section -->