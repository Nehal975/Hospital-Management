{{>header}}
{{>navbar}}

{{>breadcrum}}

<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-6 col-sm-8 col-11 m-auto">
            <h5 class="bg-primary text-center p-2 text-light">Login To Your Account</h5>
            <form action="/login" method="post">
                <div class="mb-3">
                    <input type="text" name="username" placeholder="Username Or Email Address"
                        class="form-control border-3 {{#if errorMessage}} border-danger {{else}} border-primary {{/if}}">
                    {{#if errorMessage}}
                    <p class="text-danger">{{errorMessage}}</p>
                    {{/if}}
                </div>

                <div class="mb-3">
                    <input type="password" name="password" placeholder="Password"
                        class="form-control border-3 border-primary">
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </div>
            </form>
            <a href="/forget-password-1">Forget Password?</a>
        </div>
    </div>
</div>


