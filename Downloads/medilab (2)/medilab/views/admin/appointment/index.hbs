{{>header}}
{{>navbar}}

<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-3">
            {{>adminSidebar}}
        </div>
        <div class="col-md-9">
            <h5 class="text-center bg-primary text-light p-2">Appintments</h5>
            <div class="table-responsive">
                <table id="dataTable" class="table table-borderd table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Date</th>
                            <th>Department</th>
                            <th>Doctor</th>
                            <th>Message</th>
                            <th>Active</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{_id}}</td>
                            <td>{{name}}</td>
                            <td>{{email}}</td>
                            <td>{{phone}}</td>
                            <td>{{timeHelper date}}</td>
                            <td>{{department.title}}</td>
                            <td>{{doctor.name}}</td>
                            <td>
                                <div class="appointment-message">
                                    {{message}}
                                </div>
                            </td>
                            <td onclick="window.open('/admin/appointment/edit/{{_id}}','_self')"
                                style="cursor: pointer;">{{activeHelper active}}</td>
                            <td>
                                {{#if active}}
                                {{else}}
                                <a href="/admin/appointment/delete/{{_id}}" class="btn btn-danger"><i
                                        class="fa fa-trash"></i></a>
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{{>footer}}