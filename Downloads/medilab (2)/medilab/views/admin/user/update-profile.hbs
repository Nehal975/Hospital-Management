{{>header}}
{{>navbar}}

<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-3">
            {{>adminSidebar}}
        </div>
        <div class="col-md-9">
            <h5 class="text-center bg-primary text-light p-2">Update Profile <a href="/admin"><i
                        class="fa fa-arrow-left-long text-light float-end"></i></a></h5>
            <form action="/admin/user/update-profile" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Name*</label>
                        <input type="text" name="name" value="{{data.name}}" placeholder="Doctor Name"
                            class="form-control border-3 {{#if errorMessage.name}} border-danger {{else}} border-primary {{/if}}">
                        {{#if errorMessage.name}}
                        <p class="text-danger">{{errorMessage.name}}</p>
                        {{/if}}
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Phone*</label>
                        <input type="text" name="phone" value="{{data.phone}}" placeholder="Phone Number"
                            class="form-control border-3 {{#if errorMessage.phone}} border-danger {{else}} border-primary {{/if}}">
                        {{#if errorMessage.phone}}
                        <p class="text-danger">{{errorMessage.phone}}</p>
                        {{/if}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>User Name*</label>
                        <input type="text" name="username" value="{{data.username}}" placeholder="User Name"
                            class="form-control border-3 {{#if errorMessage.username}} border-danger {{else}} border-primary {{/if}}">
                        {{#if errorMessage.username}}
                        <p class="text-danger">{{errorMessage.username}}</p>
                        {{/if}}
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Email*</label>
                        <input type="email" name="email" value="{{data.email}}" placeholder="Email Address"
                            class="form-control border-3 {{#if errorMessage.email}} border-danger {{else}} border-primary {{/if}}">
                        {{#if errorMessage.email}}
                        <p class="text-danger">{{errorMessage.email}}</p>
                        {{/if}}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Profile Pic</label>
                        <input type="file" name="pic" class="form-control border-3 border-primary">
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

{{>footer}}