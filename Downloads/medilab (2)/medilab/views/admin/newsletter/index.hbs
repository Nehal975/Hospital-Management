{{>header}}
{{>navbar}}

<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-3">
            {{>adminSidebar}}
        </div>
        <div class="col-md-9">
            <h5 class="text-center bg-primary text-light p-2">Newsletter</h5>
            <div class="table-responsive">
                <table id="dataTable" class="table table-borderd table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Email</th>
                            <th>Active</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{_id}}</td>
                            <td>{{email}}</td>
                            <td onclick="window.open('/admin/newsletter/edit/{{_id}}','_self')"
                                style="cursor: pointer;">{{activeHelper active}}</td>
                            <td><a href="/admin/newsletter/delete/{{_id}}" class="btn btn-danger"><i
                                        class="fa fa-trash"></i></a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{{>footer}}