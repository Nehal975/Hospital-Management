{{>header}}
{{>navbar}}

<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-3">
            {{>adminSidebar}}
        </div>
        <div class="col-md-9">
            <h5 class="text-center bg-primary text-light p-2">Doctor <a href="/admin/doctor/create"><i
                        class="fa fa-plus text-light float-end"></i></a></h5>
            <div class="table-responsive">
                <table id="dataTable" class="table table-borderd table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Pic</th>
                            <th>Department</th>
                            <th>Designation</th>
                            <th>Social Media</th>
                            <th>Sort Order</th>
                            <th>Active</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{_id}}</td>
                            <td>{{name}}</td>
                            <td>
                                <a href="/{{pic}}" target="_blank">
                                    <img src="/{{pic}}" height="80px" width="80px" alt="">
                                </a>
                            </td>
                            <td>{{department.title}}</td>
                            <td>{{designation}}</td>
                            <td>
                                {{#if twitter}}
                                <a href="{{twitter}}"><i class="bi bi-twitter-x"></i></a>
                                {{/if}}
                                {{#if facebook}}
                                <a href="{{facebook}}"><i class="bi bi-facebook"></i></a>
                                {{/if}}
                                {{#if instagram}}
                                <a href="{{instagram}}"><i class="bi bi-instagram"></i></a>
                                {{/if}}
                                {{#if linkedin}}
                                <a href="{{linkedin}}"><i class="bi bi-linkedin"></i></a>
                                {{/if}}
                                {{#if youtube}}
                                <a href="{{youtube}}"><i class="bi bi-youtube"></i></a>
                                {{/if}}
                            </td>
                            <td>{{sortOrder}}</td>
                            <td>{{activeHelper active}}</td>
                            <td><a href="/admin/doctor/show/{{_id}}" class="btn btn-success"><i
                                        class="fa fa-eye"></i></a></td>
                            <td><a href="/admin/doctor/edit/{{_id}}" class="btn btn-primary"><i
                                        class="fa fa-edit"></i></a></td>
                            <td><a href="/admin/doctor/delete/{{_id}}" class="btn btn-danger"><i
                                        class="fa fa-trash"></i></a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{{>footer}}