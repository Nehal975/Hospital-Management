{{>header}}
{{>navbar}}

<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-3">
            {{>adminSidebar}}
        </div>
        <div class="col-md-9">
            <h5 class="text-center bg-primary text-light p-2">Doctor <a href="/admin/doctor"><i
                        class="fa fa-arrow-left-long text-light float-end"></i></a></h5>
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{data._id}}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{data.name}}</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <a href="/{{data.pic}}" target="_blank">
                                    <img src="/{{data.pic}}" height="300px" width="300px" alt="">
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th>Department</th>
                            <td>{{{data.department.title}}}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{{data.description}}}</td>
                        </tr>
                        <tr>
                            <th>Designation</th>
                            <td>{{{data.designation}}}</td>
                        </tr>
                        <tr>
                            <th>Social Media</th>
                            <td>
                            <td>
                                {{#if twitter}}
                                <a href="{{twitter}}"><i class="bi bi-twitter-x"></i></a>
                                {{/if}}
                                {{#if facebook}}
                                <a href="{{facebook}}"><i class="bi bi-facebook"></i></a>
                                {{/if}}
                                {{#if instagram}}
                                <a href="{{instagram}}"><i class="bi bi-instagram"></i></a>
                                {{/if}}
                                {{#if linkedin}}
                                <a href="{{linkedin}}"><i class="bi bi-linkedin"></i></a>
                                {{/if}}
                                {{#if youtube}}
                                <a href="{{youtube}}"><i class="bi bi-youtube"></i></a>
                                {{/if}}
                            </td>
                            </td>
                        </tr>
                        <tr>
                            <th>Sort Order</th>
                            <td>{{data.sortOrder}}</td>
                        </tr>
                        <tr>
                            <th>Active</th>
                            <td>{{activeHelper data.active}}</td>
                        </tr>
                        <tr>
                            <th>Created At/Created By</th>
                            <td>{{timeHelper data.createdAt}} - {{data.createdBy}}</td>
                        </tr>
                        <tr>
                            <th>Updated At/Updated By</th>
                            <td>
                                <h6>Update Timeline</h6>
                                <ul>
                                    {{#each data.updatedBy}}
                                    <li> {{timeHelper time}} : {{user}}</li>
                                    {{/each}}
                                </ul>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2"><a href="/admin/doctor/edit/{{data._id}}"
                                    class="btn btn-primary w-100">Update</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{{>footer}}