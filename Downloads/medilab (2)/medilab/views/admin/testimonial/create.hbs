{{>header}}
{{>navbar}}

<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-3">
            {{>adminSidebar}}
        </div>
        <div class="col-md-9">
            <h5 class="text-center bg-primary text-light p-2">Create Testimonial <a href="/admin/testimonial"><i
                        class="fa fa-arrow-left-long text-light float-end"></i></a></h5>
            <form action="/admin/testimonial/store" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label>Name*</label>
                    <input type="text" name="name" value="{{data.name}}" placeholder="Testimonial Name"
                        class="form-control border-3 {{#if errorMessage.name}} border-danger {{else}} border-primary {{/if}}">
                    {{#if errorMessage.name}}
                    <p class="text-danger">{{errorMessage.name}}</p>
                    {{/if}}
                </div>


                <div class="mb-3">
                    <label>Message*</label>
                    <textarea name="message" placeholder="Testimonial Message" rows="7" class="form-control border-3 {{#if errorMessage.longmessage}} border-danger {{else}}
                        border-primary {{/if}}">{{data.message}}</textarea>
                    {{#if errorMessage.message}}
                    <p class="text-danger">{{errorMessage.message}}</p>
                    {{/if}}
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label>Pic*</label>
                        <input type="file" name="pic"
                            class="form-control border-3 {{#if errorMessage.pic}} border-danger {{else}} border-primary {{/if}}">
                        {{#if errorMessage.pic}}
                        <p class="text-danger">{{errorMessage.pic}}</p>
                        {{/if}}
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Sort Order*</label>
                        <input type="number" name="sortOrder" placeholder="Sort Order" value="{{data.sortOrder}}"
                            class="form-control border-3 border-primary">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Active*</label>
                        <select name="active" class="form-select border-3 border-primary">
                            <option value="1" {{dropdownHelper data.active '1' }}>Yes</option>
                            <option value="0" {{dropdownHelper data.active '0' }}>No</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

{{>footer}}